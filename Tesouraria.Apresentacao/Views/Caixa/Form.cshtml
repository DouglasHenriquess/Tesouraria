@model Tesouraria.Apresentacao.ViewModels.CaixaViewModel
<div class="container">
    <form class="form-horizontal" role="form">
    <div class="col-sm-8">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#tabPessoas" data-toggle="tab">Pessoas</a> </li>
            <li><a href="#tabTaxas" data-toggle="tab">Taxas</a> </li>
        </ul>
        <div class="tab-content" style="margin-bottom: 50px;">
            <div class="tab-pane active" id="tabPessoas">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th class="text-center">
                                Selecionar
                            </th>
                            <th>
                                Nome
                            </th>
                            <th>
                                Lugar
                            </th>
                            <th>
                                Telefone
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.PessoasVM.Count; i++)
                        {
                            @Html.HiddenFor(x => Model.PessoasVM[i].PessoaId)
                            <tr>
                                <td class="text-center">
                                    @Html.RadioButtonFor(x => Model.PessoasVM[i].Selecionado, true)
                                </td>
                                <td>
                                    @Html.DisplayFor(x => Model.PessoasVM[i].Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(x => Model.PessoasVM[i].Lugar)
                                </td>
                                <td>
                                    @Html.DisplayFor(x => Model.PessoasVM[i].Telefone)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="tab-pane" id="tabTaxas">
                <table class="table table-striped table-bordered" id="tableTaxas">
                    <thead>
                        <tr>
                            <th class="text-center">
                                Pagar
                            </th>
                            <th>
                                Taxa
                            </th>
                            <th>
                                Valor
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.TaxasVM.Count; i++)
                        {
                            @Html.HiddenFor(x => Model.TaxasVM[i].TaxaId)
                            <tr>
                                <td class="text-center">
                                    @Html.CheckBoxFor(x => Model.TaxasVM[i].Selecionado)
                                </td>
                                <td>
                                    @Html.DisplayFor(x => Model.TaxasVM[i].Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(x => Model.TaxasVM[i].Valor)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <br />
        <div class="row form-group">
            <div class="col-sm-12">
                @Html.Label("Valor Total", new { @Class = "control-label" })
            </div>
            <div class="col-sm-12">
                @Html.TextBoxFor(x => x.Valor, new { @Class = "form-control" })
            </div>
        </div>
    </div>
    </form>
</div>
