@model Tesouraria.Apresentacao.ViewModels.TaxaViewModel
<div class="container">
    <form class="form-horizontal" role="form">
    <div class=" col-sm-6">
        <div class="row form-group">
            <div class="col-sm-12">
                @Html.LabelFor(x => x.Nome, new { @class = "control-label" })
            </div>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Nome, new { @class = "form-control" })
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-12">
                @Html.LabelFor(x => x.Valor, new { @class = "control-label" })
            </div>
            <div class="col-sm-5">
                @Html.TextBoxFor(x => x.Valor, new { @class = "form-control", id = "txtValor" })
            </div>
        </div>
    </div>
    </form>
</div>
