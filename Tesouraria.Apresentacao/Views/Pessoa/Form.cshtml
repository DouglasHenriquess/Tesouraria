@model Tesouraria.Apresentacao.ViewModels.PessoaViewModel
<div class="container">
    <form class="form-horizontal" role="form">
    <div class="col-sm-6">
        <div class="row form-group">
            <div class="col-sm-12">
                @Html.LabelFor(x => x.Nome, new { @class = "control-label" })
            </div>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Nome, new { @class = "form-control" })
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-12">
                @Html.LabelFor(x => x.Lugar, new { @class = "control-label" })
            </div>
            <div class="col-sm-10">
                @Html.DropDownListFor(x => x.Lugar, ViewBag.Lugares as SelectList, new { @class = "form-control" })
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-12">
                @Html.LabelFor(x => x.Telefone, new { @class = "control-label" })
            </div>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Telefone, new { @class = "form-control" })
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-12">
                @Html.LabelFor(x => x.Email, new { @class = "control-label" })
            </div>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
            </div>
        </div>
    </div>
    </form>
</div>
